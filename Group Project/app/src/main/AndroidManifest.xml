<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mustang_clone">

    <!-- Permissions for image selection -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mustang_Clone">

        <!-- New launcher activity (Category) -->
        <activity
            android:name=".Category"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Category-related activities -->
        <activity
            android:name=".Category_Add"
            android:exported="false"
            android:parentActivityName=".Category" />

        <activity
            android:name=".Category_Update"
            android:exported="false"
            android:parentActivityName=".Category" />

        <!-- Other activities from original manifest -->
        <activity
            android:name=".CarView"
            android:exported="false" />
        <activity
            android:name=".Car_Update"
            android:exported="false" />
        <activity
            android:name=".Car_Add"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>

</manifest>
